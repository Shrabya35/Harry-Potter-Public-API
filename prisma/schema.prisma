generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  apiKey    String   @unique
  plan      Plan     @default(FREE)
  createdAt DateTime @default(now())
  usage     Usage[]
}

model Usage {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  endpoint  String
  timestamp DateTime @default(now())
}

enum Plan {
  FREE
  PRO
  PREMIUM
}

model Spell {
  id          String    @id @default(uuid())
  name        String    @unique
  type        SpellType @relation(fields: [typeId], references: [id])
  typeId      String
  description String
  createdAt   DateTime  @default(now())
}

model SpellType {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  spells      Spell[]
  createdAt   DateTime @default(now())
}

model House {
  id        String   @id @default(uuid())
  name      String   @unique
  logo      String
  creator   String
  createdAt DateTime @default(now())
}
